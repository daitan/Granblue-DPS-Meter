{
  "manifest_version": 2,
  "name": "Granblue DPS Meter",
  "description": "For elitist faggots.",
  "version": "1.0.0",

  "browser_action": {
    "default_title": "Granblue DPS Meter"
  },

  "background": {
    "scripts": [
      "src/background/storage.js",
      "src/background/options.js",
      "src/background/quest.js",
      "src/background/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "http://gbf.game.mbga.jp/*",
    "http://game.granbluefantasy.jp/*",
    "storage",
    "tabs",
    "activeTab"
  ],
  "devtools_page": "src/pages/devtools/devtools.html"
}
